{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/ECTSystem.Api/bin/Debug/net10.0/ECTSystem.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ECTSystem.Api",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7173;http://localhost:5038"
            },
            "preLaunchTask": "build"
        },
        {
            "name": "Debug Blazor WASM",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/ECTSystem.Web",
            "preLaunchTask": "launch-api"
        }
    ],
    "compounds": [
        {
            "name": "Debug API + Web",
            "configurations": ["Debug API", "Debug Blazor WASM"],
            "stopAll": true
        }
    ]
}